{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "baseUrl": ".",
        "paths": {
            "@plugins/*": ["plugins/"],
            "@components": ["src/components/index"],
            "@context": ["src/context/index"],
            "@config": ["src/config"],
            "@pages/*": ["src/pages/*"],
            "@styles": ["src/styles/index"],
        }
    },
    "include": ["src", "plugins"]
}
